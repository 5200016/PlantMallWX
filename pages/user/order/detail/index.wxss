@import "../../../../public/wxss/index.wxss";

.container {
    padding-bottom: 140rpx;
}

.content{
    display: inline;
    width:76%;
}

.detail_top {
    width: 100%;
    float: left;
    padding-bottom: 40rpx;
    background: #fff;
    font-size: 28rpx;
    background-image: url(https://w.cxzg.com/Public2/wechat_applet/images/address_bg.png);
    background-position: bottom;
    background-size: 60rpx 10rpx;
    background-repeat: repeat-x;
    border-top: 1rpx solid #e5e5e5;
}

.detail_top .order_id {
    border-bottom: 1rpx solid #e5e5e5;
    color: #353535;
    margin-left: 30rpx;
    padding: 27rpx;
    padding-left: 0;
}

.detail_top .order_id text {
    float: right;
    color: #888;
}

.detail_top .order_id text.current {
    color: #ff344b;
}

.detail_top .sh_name {
    font-size: 28rpx;
    color: #000;
    margin: 35rpx 30rpx 20rpx 30rpx;
    font-weight: 400;
}

.detail_top .sh_name text {
    float: right;
}

.detail_top .sh_address {
    margin: 0 30rpx;
    color: #353535;
    font-size: 28rpx;
    display:flex;
}

.order_cont {
    background: #fff;
    border-bottom: 1rpx solid #e5e5e5;
    float: left;
    margin-bottom: 10rpx;
    padding: 0rpx 0 30rpx 20rpx;
    width: -webkit-calc(100% - 20rpx);
    width: calc(100% - 20rpx);
}

.title {
    font-size: 28rpx;
    color: #000;
    width: 100%;
    height: 78rpx;
    line-height: 78rpx;
    float: left;
}

.title image {
    width: 30rpx;
    height: 40rpx;
    margin: 19rpx 12rpx 19rpx 10rpx;
    float: left;
}

.title .tit {
    float: left;
    width: 75%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.title text {
    float: right;
    font-size: 24rpx;
    color: #888;
}

.title text.current {
    color: #ff344b;
}

.cont_t {
    background: #f1f2f6;
    display: flex;
    background: #f1f2f6;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    margin-right: 20rpx;
    width: -webkit-calc(100% - 20rpx);
    width: calc(100% - 20rpx);
}

.cont_t image {
    width: 160rpx;
    height: 160rpx;
    margin: 10rpx;
    margin-right: 15rpx;
}

.cont_t .con {
    flex: 1;
    width: 70%;
    padding-right: 25rpx;
}

.cont_t .con .tit {
    font-size: 28rpx;
    line-height: 30rpx;
    color: #000;
    margin-bottom: 23rpx;
    margin-top: 15rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: 400;
}

.cont_t .con .txt {
    font-size: 24rpx;
    line-height: 28rpx;
    color: #353535;
    height: 60rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.cont_t .con .price {
    font-size: 28rpx;
    /*color: #ff344b;*/
    line-height: 26rpx;
    margin-top: 55rpx;
}

.cont_t .con text {
    font-size: 26rpx;
    float: right;
    color: #353535;
    line-height: 26rpx;
    padding-top: 3rpx;
}

.cont_t .con text.jifen {
    float: none;
    color: #ff344b;
}

.con_b {
    text-align: right;
    margin-top: 10rpx;
    width: 100%;
    float: left;
    border-bottom: 1rpx solid #e5e5e5;
}

.con_b navigator {
    width: 136rpx;
    height: 50rpx;
    border-radius: 5rpx;
    border: 1rpx solid #e5e5e5;
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #888;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    float: right;
}

.con_b .tk_btn {
    width: 136rpx;
    height: 50rpx;
    border-radius: 5rpx;
    border: 1rpx solid #e5e5e5;
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #888;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    float: right;
}

.con_b .setbtn {
    border: 1rpx solid #ff8a00;
    color: #ff8a00;
}

.con_b .pay_btn {
    border: 1rpx solid #ff8a00;
    background: #ff8a00;
    color: #fff;
}

.con_b .pay_btn:hover {
    border: 1rpx solid #ff8a00;
    background: #ff8a00;
    color: #fff;
}

.detail_x {
    width: 100%;
    padding: 13rpx 0;
    float: left;
    border-bottom: 1rpx solid #e5e5e5;
}

.detail_x text {
    display: block;
    margin: 7rpx 30rpx 7rpx 10rpx;
    font-size: 28rpx;
    color: #000;
    line-height: 35rpx;
}

.detail_xx {
    width: 100%;
    float: left;
    padding-top: 20rpx;
}

.detail_xx .txt {
    font-size: 28rpx;
    color: #000;
    line-height: 35rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
}

.detail_xx .txt text {
    float: right;
    margin-right: 30rpx;
}

.detail_xx .txt span {
    float: right;
    margin-right: 30rpx;
    color: #ff344b;
}

.detail_bot {
    position: fixed;
    background: #fff;
    left: 0;
    bottom: 0;
    height: 98rpx;
    border-top: 1rpx solid #e5e5e5;
    padding: 0 20rpx;
    width: -webkit-calc(100% - 40rpx);
    width: calc(100% - 40rpx);
}

.detail_bot text {
    float: left;
    font-size: 24rpx;
    color: #888;
    line-height: 98rpx;
}

.detail_bot button,.detail_bot navigator {
    width: 136rpx;
    float: right;
    height: 60rpx;
    line-height: 60rpx;
    margin: 0;
    margin-left: 10rpx;
    margin-top: 20rpx;
    padding: 0;
}

.detail_bot navigator {
    border: 1rpx solid #e5e5e5;
    text-align: center;
    border-radius: 5rpx;
}

.detail_bot .btn {
    min-width: 136rpx;
    height: 60rpx;
    margin-top: 19rpx;
    border-radius: 5rpx;
    border: 1rpx solid #ccc;
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #888;
    margin-left: 10rpx;
    float: right;
    padding: 0 10rpx;
}

.detail_bot .confirm_btn {
    border: 1rpx solid #ff8a00;
    color: #ff8a00;
}

.detail_bot .pay_btn {
    border: 1rpx solid #ff8a00;
    background: #ff8a00;
    color: #fff;
}

.detail_bot .pay_btn:hover {
    border: 1rpx solid #ff8a00;
    background: #ff8a00;
    color: #fff;
}

.btn.aready_delay_btn {
    border: 1px solid #e5e5e5;
    color: #aaa;
}

.detail_bot .bot-left {
    width: 60rpx;
    height: 60rpx;
    margin: 19rpx 0;
    border: 1rpx solid #ccc;
    border-radius: 5rpx;
}

.detail_bot image {
    width: 28rpx;
    height: 30rpx;
    margin: 15rpx auto;
    display: block;
}

.detail_bot .bot-right {
    -webkit-box-flex: 1;
    flex: 1;
}

.detail_bot .yellow {
    color: #ff8a00;
    border-color: #ff8a00;
}
