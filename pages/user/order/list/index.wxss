@import "../../../../public/wxss/index.wxss";

.del_btn{
    border: 1rpx solid #ed4014 !important;
    color: #ed4014 !important;
}

.geall {
    background-color: #fff;
    width: 100%;
    height: 84rpx;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    position: fixed;
}
.tab_menu {
    height: 84rpx;
    line-height: 84rpx;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    display: flex;
    background: #fff;
    z-index: 9999;
    overflow-x: auto;
    left: 0%;
}

.xia_it {
    width: 0;
    height: 0;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-top: 10rpx solid #bcbec1;
    top: 40rpx;
    left: 22%;
    position: fixed;
}

.up_it {
    width: 0;
    height: 0;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-bottom: 10rpx solid #bcbec1;
    top: 40rpx;
    left: 22%;
    position: fixed;
}

.all_kinds {
    width: 25%;
    height: 84rpx;
    line-height: 84rpx;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    font-size: 30rpx;
    text-align: center;
    border-right: 1rpx solid #e5e5e5;
    padding-right: 15rpx;
    z-index: 99999;
}

.tab_menu view {
    display: block;
    text-align: center;
    font-size: 30rpx;
    width: 14.66%;
    margin: 0 1%;
    color: #353535;
}

.tab_menu .active {
    border-bottom: 4rpx solid #ff8a00;
    color: #ff8a00;
}

.tab_cont {
    width: 100%;
    float: left;
    padding-top: 86rpx;
}

.right-item {
    display: none;
    width: 100%;
    float: left;
}

.right-item.active {
    display: block;
}

.what_one.active {
    color: #ff8a00;
}

.order_cont {
    background: #fff;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    float: left;
    margin-bottom: 10rpx;
    padding: 0rpx 20rpx 30rpx 20rpx;
    width: -webkit-calc(100% - 40rpx);
    width: calc(100% - 40rpx);
}

.order_cont:first-child {
    border-top: none;
}

.title {
    font-size: 28rpx;
    color: #000;
    width: 100%;
    height: 78rpx;
    line-height: 78rpx;
    float: left;
}

.title image {
    width: 48rpx;
    height: 48rpx;
    margin: 19rpx 12rpx 19rpx 10rpx;
    float: left;
}

.title .tit {
    float: left;
    width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.title text {
    float: right;
    font-size: 24rpx;
    color: #888;
}

.title text.current {
    color: #ff344b;
}

.cont_t {
    width: 100%;
    background: #f1f2f6;
    display: flex;
    background: #f1f2f6;
    margin-bottom: 10rpx;
}

.cont_t image {
    width: 160rpx;
    height: 160rpx;
    margin: 10rpx;
    margin-right: 15rpx;
}

.cont_t .con {
    flex: 1;
    width: 70%;
    padding-right: 25rpx;
}

.cont_t .con .tit {
    font-size: 28rpx;
    line-height: 30rpx;
    color: #000;
    margin-bottom: 23rpx;
    margin-top: 15rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: 400;
}

.cont_t .con .txt {
    font-size: 24rpx;
    line-height: 28rpx;
    color: #353535;
    height: 60rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.cont_t .con .price {
    font-size: 28rpx;
    /*color: #ff344b;*/
    margin-top: 55rpx;
}

.cont_t .con text {
    font-size: 26rpx;
    float: right;
    color: #353535;
    line-height: 26rpx;
    padding-top: 5rpx;
}

.con_c {
    font-size: 28rpx;
    color: #000;
    text-align: right;
    margin-top: 20rpx;
}

.con_c .price {
    color: #ff344b;
}

.con_c .tranmode {
    float: left;
    text-align: left;
}

.con_b {
    text-align: right;
    margin-top: 30rpx;
    width: 100%;
    float: left;
    padding-top: 1rpx;
}

.con_b .btn {
    min-width: 136rpx;
    height: 60rpx;
    border-radius: 10rpx 10rpx;
    border: 1rpx solid #ccc;
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #888;
    margin-left: 10rpx;
    float: right;
    padding: 0 10rpx;
}

.con_b .confirm_btn {
    border: 1rpx solid #ff8a00;
    background: #ff8a00;
    color: #ffffff;
}

.con_b .pay_btn {
    border: 1rpx solid #ff8a00;
    background: #ff8a00;
    color: #fff;
}

.con_b .review_btn {
    border: 1rpx solid #ff8a00;
    background: #ff8a00;
    color: #fff;
}


.con_b .pay_btn:hover {
    border: 1rpx solid #ff8a00;
    background: #ff8a00;
    color: #fff;
}

.btn.aready_delay_btn {
    border: 1px solid #e5e5e5;
    color: #aaa;
}

.black {
    background: #000;
    opacity: 0.6;
    width: 100%;
    bottom: 0;
    left: 0;
    right: 0;
    position: fixed;
    height: 100%;
    top: 90rpx;
    z-index: 9;
}

.set_what {
    width: 100%;
    position: fixed;
    height: 100%;
    left: 0;
    right: 0;
    top: 86rpx;
    z-index: 99;
}

.what_one {
    height: 90rpx;
    line-height: 90rpx;
    margin-left: 40rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #e5e5e5;
    font-size: 30rpx;
}

.bai_pro {
    background-color: #fff;
}

.con_b .yellow {
    color: #ff8a00;
    border-color: #ff8a00;
}
