@import "../../../../public/wxss/index.wxss";

.container {
    padding-bottom: 110rpx;
}

.container form {
    width: 100%;
    float: left;
}

.address_cont {
    border-bottom: 1rpx solid #e5e5e5;
    width: 100%;
    float: left;
    background: #fff;
    margin-bottom: 20rpx;
}

.address_cont .cont {
    display: flex;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.address_cont .cont:last-child {
    border-bottom: 0;
}

.txtl {
    font-size: 34rpx;
    color: #000;
    width: 145rpx;
    margin-right: 30rpx;
    line-height: 100rpx;
}

.txtr {
    font-size: 34rpx;
    color: #353535;
    width: 70%;
    float: left;
    margin-right: 5rpx;
}

.txtr .picker {
    float: left;
    margin-right: 10rpx;
    margin-top: 27rpx;
    font-size: 34rpx;
    color: #353535;
}

.txtr input {
    font-size: 34rpx;
    color: #353535;
    margin-top: 26rpx;
}

.txtr textarea {
    margin-top: 15rpx;
    font-size: 34rpx;
    color: #353535;
    width: 100%;
    margin-bottom: 20rpx;
    float: left;
}

.del_btn {
    border: 0;
    border-radius: 0;
    width: 100%;
    float: left;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    border-left: 0;
    text-align: center;
    line-height: 100rpx;
    background: #fff;
    color: #ff344b;
    font-size: 36rpx;
}

.btn_area {
    margin: 50rpx 30rpx;
    float: left;
    width: -webkit-calc(100% - 60rpx);
    width: calc(100% - 60rpx);
}

.btn_area .sub_btn {
    background: #ff8a00;
    color: #fff;
}

.modal {
    position: absolute;
    z-index: 999;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
}

.md-content {
    position: absolute;
    width: 600rpx;
    height: 280rpx;
    background: #fff;
    border-radius: 8rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    overflow: hidden;
}

.md-title {
    height: 190rpx;
    padding: 40rpx;
    box-sizing: border-box;
    line-height: 48rpx;
    font-size: 36rpx;
    text-align: center;
    border-bottom: 1rpx solid #e5e5e5;
}

.md-btn {
    height: 90rpx;
}

.md-btn button {
    width: 50%;
    float: left;
    border: none;
    height: 100%;
    line-height: 90rpx;
    border-radius: 0;
    background-color: #fff;
    color: #1AAD16;
    -webkit-tap-highlight-color: #eee;
}

.md-btn .md-cancel {
    border-right: 1rpx solid #e5e5e5;
    color: #333;
}

.md-btn .gray {
    background: #eee;
}
