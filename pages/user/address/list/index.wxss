@import "../../../../public/wxss/index.wxss";

.container {
    padding-bottom: 120rpx;
    padding-top: 0rpx;
}

.address_cont {
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    margin-bottom: 10rpx;
    width: 100%;
    float: left;
    background: #fff;
}

.address_cont:first-child {
    border-top: 0;
}

.address_cont .cont {
    display: flex;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #e5e5e5;
    width: -webkit-calc(100% - 30rpx);
    width: calc(100% - 30rpx);
    padding: 30rpx 0 20rpx 0;
}

.address_cont .cont .address {
    width: 84%;
    float: left;
}

.address .title {
    font-size: 34rpx;
    color: #000;
    margin-bottom: 20rpx;
    font-weight: 400;
}

.address .title span {
    float: right;
}

.address .txt {
    font-size: 28rpx;
    color: #353535;
    line-height: 36rpx;
    height: 72rpx;
    word-wrap: break-word;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.address_cont .cont .edit_btn {
    width: 18%;
    font-size: 30rpx;
    float: right;
    color: #ff8a00;
    line-height: 128rpx;
    text-align: center;
}

.address_cont .cont_bot {
    display: flex;
    padding: 0 30rpx;
    color: #000;
    font-size: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
}

.cont_bot .radio {
    margin-top: -2rpx;
    margin-right: 10rpx;
}

.add_address {
    position: fixed;
    left: 0;
    bottom: 0;
    height: 98rpx;
    line-height: 98rpx;
    border-top: 1rpx solid #e5e5e5;
    width: 100%;
    text-align: center;
    font-size: 36rpx;
    color: #000;
    background: #fff;
    z-index: 99;
}

.add_address image {
    width: 36rpx;
    height: 36rpx;
    margin-left: -115rpx;
    position: absolute;
    left: 50%;
    bottom: 33rpx;
    z-index: 999;
}

.add_address text {
    padding-left: 40rpx;
}
